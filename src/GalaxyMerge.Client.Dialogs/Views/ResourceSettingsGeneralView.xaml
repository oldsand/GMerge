<UserControl x:Class="GalaxyMerge.Client.Dialogs.Views.ResourceSettingsGeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://gmerge.com/ui/wpf"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:GalaxyMerge.Client.Dialogs.ViewModels"
             xmlns:design="clr-namespace:GalaxyMerge.Client.Dialogs.Design"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance vm:ResourceSettingsGeneralViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/GalaxyMerge.Client.Resources;component/Resources.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <design:DesignModels x:Key="DesignModel" />
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid d:DataContext="{Binding Source={StaticResource DesignModel}, Path=ResourceSettingsGeneralViewModel}"
        Background="{ui:ThemeResource ResourceKey=PrimaryBackground}">
    

    <StackPanel x:Name="ConnectionPanel"
                Visibility="{Binding ResourceEntry.ResourceType, Converter={ui:EnumVisibilityConverter}, ConverterParameter=Connection}" >
      <ui:FormControl LabelText="Host" Orientation="Horizontal">
        <TextBox Text="{Binding ResourceEntry.Connection.NodeName}"
                 Margin="10 0" />
      </ui:FormControl>
      <ui:FormControl LabelText="Galaxy" Orientation="Horizontal">
        <TextBox Text="{Binding ResourceEntry.Connection.GalaxyName}"
                 Margin="10 0" />
      </ui:FormControl>
    </StackPanel>
    
    <StackPanel x:Name="ArchivePanel"
                Visibility="{Binding ResourceEntry.ResourceType, Converter={ui:EnumVisibilityConverter}, ConverterParameter=Archive}" >
      <ui:FormControl LabelText="File" Orientation="Horizontal">
        <TextBox Text="{Binding ResourceEntry.ResourceName}"
                 Margin="10 0" />
      </ui:FormControl>
    </StackPanel>

  </Grid>

</UserControl>