<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:GalaxyMerge.Client.Resources.Controls"
                    xmlns:t="clr-namespace:GalaxyMerge.Client.Resources.Theming">

  <Style x:Key="IconStyle" TargetType="{x:Type controls:Icon}">
    <Setter Property="Height" Value="16" />
    <Setter Property="Width" Value="16" />
    <Setter Property="Foreground" Value="{t:ThemeResource ResourceKey=IconForeground}" />
  </Style>
  <Style BasedOn="{StaticResource IconStyle}" TargetType="{x:Type controls:Icon}" />

</ResourceDictionary>