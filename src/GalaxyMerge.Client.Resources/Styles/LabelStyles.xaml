<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:t="clr-namespace:GalaxyMerge.Client.Resources.Theming">
  
  <Style x:Key="Label.Standard" TargetType="{x:Type Label}">
    <Setter Property="Foreground" Value="{t:ThemeResource ResourceKey=PrimaryForeground}"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="Regular"/>
  </Style>
  
  <Style x:Key="Label.Title" TargetType="{x:Type Label}">
    <Setter Property="Foreground" Value="{t:ThemeResource ResourceKey=PrimaryForeground}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Bold"/>
  </Style>
  
  <Style x:Key="Label.Caption" TargetType="{x:Type Label}">
    <Setter Property="Foreground" Value="{t:ThemeResource ResourceKey=CaptionForeground}"/>
    <Setter Property="FontSize" Value="10"/>
  </Style>
</ResourceDictionary>