<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:t="clr-namespace:GalaxyMerge.Client.Resources.Theming">
  
  <FontFamily x:Key="Font.LimeLight">/GalaxyMerge.Client.Resources;Component/Fonts/#Limelight</FontFamily>
  <FontFamily x:Key="Font.Rubik">/GalaxyMerge.Client.Resources;Component/Fonts/#Rubik</FontFamily>
  
  <Style x:Key="Text.Default">
    <Setter Property="TextElement.Foreground" Value="{t:ThemeResource ResourceKey=PrimaryForeground}"/>
    <Setter Property="TextElement.FontSize" Value="12"/>
  </Style>
  
  <Style x:Key="Text.Header">
    <Setter Property="TextElement.Foreground" Value="{t:ThemeResource ResourceKey=PrimaryForeground}"/>
    <Setter Property="TextElement.FontSize" Value="12"/>
    <Setter Property="TextElement.FontWeight" Value="Bold"/>
  </Style>
  
  <Style x:Key="Text.Label">
    <Setter Property="TextElement.Foreground" Value="{t:ThemeResource ResourceKey=CaptionForeground}"/>
    <Setter Property="TextElement.FontSize" Value="12"/>
  </Style>
  
  <Style x:Key="Text.Caption">
    <Setter Property="TextElement.Foreground" Value="{t:ThemeResource ResourceKey=CaptionForeground}"/>
    <Setter Property="TextElement.FontSize" Value="11"/>
  </Style>
  
</ResourceDictionary>