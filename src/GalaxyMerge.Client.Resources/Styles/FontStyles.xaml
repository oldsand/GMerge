<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <FontFamily x:Key="Font.LimeLight">/GalaxyMerge.Client.Resources;Component/Fonts/#Limelight</FontFamily>
  <FontFamily x:Key="Font.Rubik">/GalaxyMerge.Client.Resources;Component/Fonts/#Rubik</FontFamily>
  
  <Style x:Key="Text.Rubik">
    <Setter Property="TextElement.FontFamily" Value="{StaticResource Font.Rubik}" />
    <Setter Property="TextElement.FontSize" Value="12" />
  </Style>
  
  <Style x:Key="Text.LimeLight">
    <Setter Property="TextElement.FontFamily" Value="{StaticResource Font.LimeLight}" />
  </Style>
</ResourceDictionary>