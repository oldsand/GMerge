<UserControl x:Class="GalaxyMerge.Client.Application.Views.ShellHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:ui="http://gmerge.com/ui/wpf"
             xmlns:design="clr-namespace:GalaxyMerge.Client.Application.Design"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="50"
             d:DesignWidth="1200"
             mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary>
      <design:DesignViewModels x:Key="DesignViewModels" />
    </ResourceDictionary>
  </UserControl.Resources>

  <Border Background="{ui:ThemeResource ResourceKey=PanelBackground}"
          BorderBrush="{ui:ThemeResource ResourceKey=PrimaryBorder}"
          BorderThickness="0 1 0 1"
          d:DataContext="{Binding ShellHeaderViewModel, Source={StaticResource DesignViewModels}}">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <Button Grid.Column="0" Margin="10,0"
              Width="60" Height="26"
              Command="{Binding NewResourceCommand}">
        <StackPanel Orientation="Horizontal">
          <ui:Icon Template="{DynamicResource Icon.Add}"
                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                   Margin="0 0 5 0" />
          <TextBlock Text="New"
                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
        </StackPanel>
      </Button>

      <StackPanel Grid.Column="1"
                  Margin="5,0"
                  HorizontalAlignment="Left"
                  Orientation="Horizontal">
        <ComboBox x:Name="ResourceSelector"
                  ItemsSource="{Binding Resources}"
                  SelectedItem="{Binding SelectedResourceEntry}"
                  Background="{ui:ThemeResource ResourceKey=PrimaryBackground}"
                  Width="300" Height="26"
                  VerticalContentAlignment="Center">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="30" />
                  <ColumnDefinition />
                  <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <ui:Icon Grid.Column="0"
                         Template="{Binding ResourceType, Converter={ui:ResourceTypeIconConverter}}" />
                <TextBlock Grid.Column="1" Text="{Binding ResourceName}" />
                <Button Grid.Column="2" Style="{StaticResource Style.Button.Transparent}">
                  <ui:Icon Template="{StaticResource Icon.Menu}"
                           Height="10" Width="10"/>
                </Button>
              </Grid>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>
    </Grid>
  </Border>

</UserControl>