<UserControl x:Class="GalaxyMerge.Client.Application.Views.ShellHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:ui="http://gmerge.com/ui/wpf"
             xmlns:design="clr-namespace:GalaxyMerge.Client.Application.Design"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="40"
             d:DesignWidth="1200"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <design:DesignViewModels x:Key="DesignViewModels" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid d:DataContext="{Binding ShellHeaderViewModel, Source={StaticResource DesignViewModels}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="5,0" Orientation="Horizontal">
            <Button Margin="0,0,5,0" Command="{Binding AddResourceCommand}"
                    Background="DodgerBlue" Width="60" Height="30">
                <StackPanel Orientation="Horizontal">
                    <ui:Icon Template="{DynamicResource Icon.Add}"
                             Foreground="WhiteSmoke" 
                             Margin="0 0 5 0"/>
                    <TextBlock Text="New" 
                               Foreground="WhiteSmoke" />
                </StackPanel>
            </Button>
        </StackPanel>
        <Border Grid.Column="1"
                Height="16"
                Margin="5,0"
                BorderBrush="Black"
                BorderThickness="1,0,0,0" />
        <StackPanel Grid.Column="2" Margin="5,0" HorizontalAlignment="Left" Orientation="Horizontal">
            <ui:Icon Margin="0,0,5,0" VerticalAlignment="Center" Template="{DynamicResource Icon.Galaxy}" />
            <TextBlock Width="150"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Text="SOME_GALAXY"
                       TextTrimming="CharacterEllipsis"/>
            <ui:Icon Margin="0,0,5,0" VerticalAlignment="Center" Template="{DynamicResource Icon.Arrow.Down}" />
        </StackPanel>
        <TextBox Grid.Column="3" MinWidth="100" MaxWidth="400" />
    </Grid>
</UserControl>